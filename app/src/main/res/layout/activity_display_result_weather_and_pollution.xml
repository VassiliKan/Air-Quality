<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:text="@string/meteorological_and_pollution_survey"
            android:id="@+id/weatherAndPollution"
            android:layout_width="364dp"
            android:layout_height="76dp"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/weatherAndPollutionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherAndPollution" />

        <TextView
            android:id="@+id/weatherAndPollutionHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionDate" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="313dp"
            android:layout_height="329dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHour"
            app:layout_constraintVertical_bias="0.741"
            app:rowCount="7">

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="@string/temperature"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.711"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHour"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="@string/pressure"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionTemp"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/humidity"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionPressure"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/wind_speed"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHumidity"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/wind_direction"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionWindSpeed"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView6"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:text="@string/pollution_index"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pollutionLevel"
                    app:layout_constraintVertical_bias="0.131"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="5" />

                <TextView
                    android:id="@+id/weatherAndPollutionTxtView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/main_pollutant"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pollutionHour"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="6" />

                <TextView
                    android:id="@+id/weatherAndPollutionTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.711"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHour"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/weatherAndPollutionPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionTemp"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/weatherAndPollutionHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionPressure"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/weatherAndPollutionWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHumidity"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/weatherAndPollutionWindDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionWindSpeed"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/weatherAndPollutionLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionHumidity"
                    app:layout_row="5" />

                <TextView
                    android:id="@+id/weatherAndPollutionMainPollutant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.713"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherAndPollutionWindSpeed"
                    app:layout_row="6" />

        </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>